<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VodokanalMobile.Authorization" BackgroundColor="#112B47">
    <ContentPage.Content>
        <StackLayout Padding="40" VerticalOptions="Center" HorizontalOptions="FillAndExpand" >
            <Image Source="logo_vodokanal.png" WidthRequest="180" HeightRequest="180"></Image>

            <Entry x:Name="Login" Text= "{Binding}" Placeholder="Логин" TextColor="White" PlaceholderColor="LightGray" ></Entry>
            <Entry x:Name="Password" Placeholder="Пароль" IsPassword="True" TextColor="White" PlaceholderColor="LightGray"></Entry>
            <Button VerticalOptions="Center" 
                    Text="Войти" 
                    TextColor="White" BorderColor="LightBlue" x:Name="Enter" Clicked="Enter_Clicked" BackgroundColor="Transparent" BorderWidth="1.5" CornerRadius="50" ></Button>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>